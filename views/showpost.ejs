<% include partials/header %>
    <div class="ui text container context">
        <div class="ui huge header"><%= post.title %></div>
        <div class="ui centered rounded top attached">
            <div class="item">
                <img class="ui image" src="<%= post.image %>" alt="Post Image"/>
                <div class="content">
                    <small><strong>created at: <%= post.createdAt.toDateString() %></strong></small>
                </div>
                <div class="description">
                    <p><%= post.body %></p>
                </div>
            </div>
        </div>
    </div>
<% include partials/footer %>